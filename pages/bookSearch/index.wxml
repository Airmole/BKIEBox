    <!--节假日信息      wx-if="{{item.gapDays <= 30 }}"-->
    <view class="main-card-item" id="fj" wx:for='{{jsonStr["nextHoliday"]}}' wx:key="jiejiari">
      <view class="card-item-hd">
        <image class="card-item-icon" src="/images/holiday.png"></image>
        <text class="card-item-name">放假信息</text>
      </view>
      <view class="card-item-bd">
        <view class="jy-list">
          <view class="jy-item">
            <view class="jy-return-time">
              <text class="jy-return-time-value">今天距 {{item.holidayName}}</text>
            </view>
            <view class="jy-timing">
              <text class="jy-timing-text">还有</text>
              <text class="ykt-balance-value">{{item.gapDays}}</text>
              <text class="jy-timing-text">天</text>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!--距考试周倒计时  wx-if="{{jsonStr.gap2ExamWeek <= 30 }}"-->
    <view class="main-card-item" id="ks">
      <view class="card-item-hd">
        <image class="card-item-icon" src="/images/ks.png"></image>
        <text class="card-item-name">集中考试周</text>
      </view>
      <view class="card-item-bd">
        <view class="jy-list">
          <view class="jy-item">
