      <ad unit-id="adunit-62f52651dd5f4ff6"></ad>
    </view>
    <!-- 广告位结束 -->

    <button open-type="share" class="login-btn">
      <text>好用！分享给同学</text>
    </button>

    <view wx:if="{{uid=='' || pwd=='' }}" bindtap='logout' class="login-btn">
      <text>学号登录</text>
    </view>
    <view wx:else bindtap='logout' class="logout-btn">
      <text>注销登录</text>
    </view>

