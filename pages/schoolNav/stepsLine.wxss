/* pages/schoolNav/stepsLine.wxss */

@font-face {
  font-family: 'iconfont';
  src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
  font-weight: normal;
  font-style: normal;
}

.item {
  display: flex;
  padding: 0 35rpx;
  /* min-height: 60px; */
  height: 60px;
}

.iconfont {
  font-family: 'iconfont' !important;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-refresh:before {
  content: '\e63b';
}

.icon-bus:before {
  content: '\e6dd';
}

.icon-delete:before {
  content: '\e616';
}

.icon-enter:before {
  content: '\e624';
}

.icon-arrow:before {
  content: '\e6bf';
}

.icon-collection:before {
  content: '\e630';
}

.icon-line:before {
  content: '\e642';
}

.icon-walk:before {
  content: '\e927';
}

.icon-circle:before {
  content: '\e643';
}

.icon-station:before {
  content: '\e600';
}

.icon-location:before {
  content: '\e614';
}

.icon-reverse:before {
  content: '\e77f';
}

.bus {
  background-color: #ebf5fb;
}

.icon {
  align-self: center;
  font-size: 20px;
}

.walk .icon {
  color: #2caa60;
}

.bus .icon {
  color: #0082dc;
}

.split-line {
  position: relative;
  margin: 0 20px;
  width: 2px;
  background-color: #7acfa6;
}

.item:first-child .split-line {
  margin-top: 22px;
}

.item:last-child .split-line {
  margin-bottom: 22px;
}

.walk .split-line {
  background-color: #2caa60;
}

.bus .split-line {
  background-color: #0082dc;
}

.circle {
  position: absolute;
  left: -3px;
  width: 8px;
  height: 8px;
  background-color: inherit;
  border-radius: 50%;
}

.start-circle {
  top: 10px;
}

.terminal-circle {
  bottom: 10px;
}

.item:first-child .start-circle {
  top: -12px;
  left: -5px;
  border: 2px solid #44cba9;
  background-color: transparent;
}

.item:last-child .terminal-circle {
  bottom: -12px;
  left: -5px;
  border: 2px solid #ff5a00;
  background-color: transparent;
}

.detail {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 6px 0;
}

.start, .terminal {
  font-size: 14px;
}

.content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 12px;
  color: #888;
}

.content view {
  margin: 4px 0;
}

.station {
  display: inline;
  font-size: 13px;
  color: #000;
}
